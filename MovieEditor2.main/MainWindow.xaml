<Window x:Class="MovieEditor2.main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieEditor2.main"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:myControls="clr-namespace:MyControls;assembly=MyControls"
        xmlns:movieListUI="clr-namespace:MovieEditor2.MovieListUI;assembly=MovieEditor2.MovieListUI"
        xmlns:commonSettingUI="clr-namespace:MovieEditor2.CommonSettingUI;assembly=MovieEditor2.CommonSettingUI"
        xmlns:individualUI="clr-namespace:MovieEditor2.IndividualUI;assembly=MovieEditor2.IndividualUI"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="MovieEditor" Height="450" Width="800">
    <Grid>
        <materialDesign:DialogHost Identifier="ProgressDialog" />
        <materialDesign:DialogHost Identifier="DeleteCompletedDialog" />
        
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />     <!--ファイル数＆共通設定-->
                <RowDefinition Height="Auto" />     <!--区切り線-->
                <RowDefinition Height="*" />        <!--編集領域-->
                <RowDefinition Height="Auto" />     <!--区切り線-->
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>


            <!--ファイル数＆共通設定-->
            <Grid Grid.Row="0" Margin="8,0,8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource MaterialDesignIconForegroundButton}" Command="{Binding HomeSlideCommand}" >
                    <materialDesign:PackIcon Kind="Home" Width="20" Height="20" />
                </Button>
                <TextBlock Grid.Column="1" Text="{Binding Items.Count, StringFormat=ファイル数：{0}}"
                    FontFamily="Consolas" Margin="24,0,0,0" VerticalAlignment="Center" />
                <Button Grid.Column="2" Margin="24,0,0,0" Content="test" />
            </Grid>

            <!--区切り線-->
            <Separator Grid.Row="1" Margin="0,4,0,4" />

            <!--編集領域(画面遷移あり)-->
            <materialDesign:Transitioner Grid.Row="2" SelectedIndex="{Binding SlideIndex}" >
                <!--ホーム-->
                <materialDesign:TransitionerSlide OpeningEffect="{materialDesign:TransitionEffect None}">
                    <local:HomeSlide />
                </materialDesign:TransitionerSlide>
            
                <!--個別編集-->
                <materialDesign:TransitionerSlide OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight}">
                    <individualUI:IndividualSlide DataContext="{Binding IndividualSlideUI}" />
                </materialDesign:TransitionerSlide>
            </materialDesign:Transitioner>

            <!--区切り線-->
            <Separator Grid.Row="3" Margin="0,4,0,4" />

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="出力先：" VerticalAlignment="Center" />
                <myControls:PathBox Grid.Column="1" Width="400" Margin="8,0,0,0" Text="{Binding OutputDirectory}" />

                <Button Grid.Column="5" HorizontalAlignment="Center" Margin="16,0,16,0" FontWeight="Bold" FontSize="18" Command="{Binding RunCommand}" >
                    <myControls:IconTextBlock Icon="RunFast" Text="実行" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
